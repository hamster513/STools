# ========================================
# Конфигурация STools
# ========================================

# Основные настройки
COMPOSE_PROJECT_NAME=stools
DOMAIN=localhost

# ========================================
# Настройки PostgreSQL
# ========================================

# База данных аутентификации
AUTH_DB_NAME=auth_db
AUTH_DB_USER=auth_user
AUTH_DB_PASSWORD=auth_pass

# База данных LogAnalizer
LOGANALIZER_DB_NAME=loganalizer_db
LOGANALIZER_DB_USER=loganalizer_user
LOGANALIZER_DB_PASSWORD=loganalizer_pass

# База данных VulnAnalizer
VULNANALIZER_DB_NAME=vulnanalizer
VULNANALIZER_DB_USER=vulnanalizer
VULNANALIZER_DB_PASSWORD=vulnanalizer

# ========================================
# Настройки Redis
# ========================================

# Redis для кэширования
REDIS_PASSWORD=
REDIS_MAX_MEMORY=256mb
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# ========================================
# Настройки безопасности
# ========================================

# JWT секретный ключ (ОБЯЗАТЕЛЬНО ИЗМЕНИТЬ!)
JWT_SECRET_KEY=your-secret-key-change-in-production

# ========================================
# Настройки портов
# ========================================

# Порт для HTTP
NGINX_HTTP_PORT=80

# Порт для HTTPS (если используется SSL)
NGINX_HTTPS_PORT=443

# ========================================
# Настройки SSL (опционально)
# ========================================

# Путь к SSL сертификатам
SSL_CERT_PATH=./nginx/ssl/certificate.crt
SSL_KEY_PATH=./nginx/ssl/private.key

# ========================================
# Настройки производительности
# ========================================

# Максимальное количество подключений к БД
DB_MAX_CONNECTIONS=20

# Таймаут подключения к БД (секунды)
DB_CONNECT_TIMEOUT=10

# ========================================
# Настройки логирования
# ========================================

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Максимальный размер лог-файла (МБ)
LOG_MAX_SIZE=100

# Количество файлов логов для хранения
LOG_BACKUP_COUNT=5
